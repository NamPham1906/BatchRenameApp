<UserControl x:Class="AddPrefixRule.RuleWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddPrefixRule"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d"
             Background="White"
             Loaded="UserControl_Loaded"
             HorizontalContentAlignment="Left"             HorizontalAlignment="Stretch"             VerticalAlignment="Stretch">
    <StackPanel Margin="10">
        <TextBlock FontWeight="Bold" HorizontalAlignment="left">Add Prefix:</TextBlock>
        <TextBox x:Name="prefixInput" Text="{Binding Prefix}" TextChanged="prefixInput_TextChanged"
                 HorizontalAlignment="Stretch"/>
    </StackPanel>
</UserControl>
