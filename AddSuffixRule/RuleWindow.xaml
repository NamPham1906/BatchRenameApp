<UserControl x:Class="AddSuffixRule.RuleWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddSuffixRule"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="150"
             Background="White"
             Loaded="UserControl_Loaded">
    <StackPanel Margin="10">
        <Label FontWeight="Bold">Add Suffix:</Label>
        <TextBox x:Name="suffixInput" Text="{Binding Suffix}" TextChanged="suffixInput_TextChanged"/>
    </StackPanel>
</UserControl>
