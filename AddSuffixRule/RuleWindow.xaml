<UserControl x:Class="AddSuffixRule.RuleWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddSuffixRule"
             mc:Ignorable="d" 
             Background="White"
             Loaded="UserControl_Loaded"
             HorizontalContentAlignment="Stretch"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <StackPanel Margin="10">
        <TextBlock FontWeight="Bold" HorizontalAlignment="left">Add Suffix:</TextBlock>
        <TextBox x:Name="suffixInput" Text="{Binding Suffix}" TextChanged="suffixInput_TextChanged"
                 PreviewTextInput="ValidationTextBox" HorizontalAlignment="Stretch"/>
    </StackPanel>
</UserControl>
