<UserControl x:Class="RemoveExtraSpaceRule.RuleWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:RemoveExtraSpaceRule"
             Background="White"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="150" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <local:CheckboxValueConverter x:Key="checkboxValueConverter" />
    </UserControl.Resources>
    <StackPanel Margin="10">
        <Label FontWeight="Bold">Remove:</Label>
        <RadioButton IsChecked="{Binding Configuration, Converter={StaticResource checkboxValueConverter}, ConverterParameter=-1}" Checked="LeadingRadio_Checked" Name="LeadingRadio" GroupName="TrimType">Leading Space</RadioButton>
        <RadioButton IsChecked="{Binding Configuration, Converter={StaticResource checkboxValueConverter}, ConverterParameter=0}" Checked="TrailingRadio_Checked" Name="TrailingRadio" GroupName="TrimType">Trailing Space</RadioButton>
        <RadioButton IsChecked="{Binding Configuration, Converter={StaticResource checkboxValueConverter}, ConverterParameter=1}" Checked="BothRadio_Checked" Name="BothRadio" GroupName="TrimType" >Both</RadioButton>
    </StackPanel>
</UserControl>
