<UserControl x:Class="ConvertToLowercaseRule.RuleWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConvertToLowercaseRule"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="150"
             Background="White"
             Loaded="UserControl_Loaded">
    <StackPanel Margin="10 10 5 10">
        <Label FontWeight="Bold">
            <Label.Content>
                <AccessText TextWrapping="Wrap">
                    Convert To Lowercase And Remove Space.
                </AccessText>
            </Label.Content>
        </Label>
    </StackPanel>
</UserControl>
