<UserControl x:Class="ChangeFileNameRule.ChangeFileNameWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChangeFileNameRule"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded"
             Background="White">
    <StackPanel Margin="10">
        <Label FontWeight="Bold">Enter new file name</Label>
        <TextBox  x:Name="nameInput" TextChanged="nameInput_TextChange" Text="{Binding NewName}"></TextBox>
    </StackPanel>
</UserControl>
