<UserControl x:Class="ChangeFileNameRule.ChangeFileNameWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChangeFileNameRule"
             mc:Ignorable="d" 
             HorizontalContentAlignment="Stretch"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch"
             Background="White"
             Loaded="UserControl_Loaded">
    <StackPanel Margin="10">
        <TextBlock FontWeight="Bold" HorizontalAlignment="left">Enter new file name</TextBlock>
        <TextBox HorizontalAlignment="Stretch" x:Name="nameInput" TextChanged="nameInput_TextChange" Text="{Binding NewName}"
                 PreviewTextInput="ValidationTextBox"></TextBox>
    </StackPanel>
</UserControl>
